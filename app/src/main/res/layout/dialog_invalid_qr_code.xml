<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    >

  <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/badgeImage"
      android:layout_width="@dimen/_130sdp"
      android:layout_height="@dimen/_150sdp"
      android:layout_marginTop="@dimen/_5sdp"
      android:padding="@dimen/_10sdp"
      android:src="@drawable/ic_invalid_qr_code"
      />

  <TextView
      android:id="@+id/txtTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/_5sdp"
      android:ellipsize="end"
      android:fontFamily="@font/kreon_regular"
      android:gravity="center|top"
      android:text="@string/str_that_didn_t_go_as_planned"
      android:textColor="@color/colorRed"
      android:textSize="@dimen/_18sdp"
      />

  <TextView
      android:id="@+id/txtMessage"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/_5sdp"
      android:layout_marginEnd="@dimen/_10sdp"
      android:layout_marginLeft="@dimen/_10sdp"
      android:layout_marginRight="@dimen/_10sdp"
      android:layout_marginStart="@dimen/_10sdp"
      android:layout_marginTop="@dimen/_5sdp"
      android:ellipsize="end"
      android:fontFamily="@font/open_sans_regular"
      android:gravity="center|top"
      android:lineSpacingExtra="@dimen/_3sdp"
      android:padding="@dimen/_10sdp"
      android:textColor="@color/colorBlack"
      android:textSize="@dimen/_10sdp"
      tools:text="@string/str_invalid_qr_code_hint"
      />

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btnOK"
      android:layout_width="@dimen/_150sdp"
      android:layout_height="@dimen/_36sdp"
      android:layout_gravity="center"
      android:layout_margin="@dimen/_5sdp"
      android:background="@drawable/btn_shadow_blue_selected"
      android:fontFamily="@font/kreon_bold"
      android:padding="@dimen/_5sdp"
      android:text="@string/str_ok_got_it"
      android:textAllCaps="false"
      android:textColor="@color/colorWhite"
      android:textSize="@dimen/_13sdp"
      />

</LinearLayout>
