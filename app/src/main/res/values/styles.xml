<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="android:windowBackground">@drawable/app_background</item>
    <item name="colorAccent">@color/colorAccent</item>
    <!--do this for changing the color-->
    <item name="drawerArrowStyle">@style/DrawerHamburgerStyle</item>

    <item name="dividerVertical">?android:attr/listDivider</item>
    <item name="android:listDivider">@drawable/drop_shadow</item>

  </style>

  <!-- Base application theme. -->
  <style name="AppTheme1" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="android:windowBackground">@drawable/app_background</item>
    <item name="colorAccent">@color/colorWhite</item>
    <!--do this for changing the color-->
    <item name="drawerArrowStyle">@style/DrawerHamburgerStyle</item>

    <item name="dividerVertical">?android:attr/listDivider</item>
    <item name="android:listDivider">@drawable/drop_shadow</item>

  </style>

  <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="android:background">@drawable/app_background</item>
  </style>

  <style name="DrawerHamburgerStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
    <item name="spinBars">false</item>
    <item name="color">@color/colorWhite</item>
  </style>

  <style name="NavigationDrawerStyle" parent="AppTheme">
    <item name="android:layout_marginTop">@dimen/_minus2sdp</item>
    <item name="android:includeFontPadding">false</item>
    <item name="android:gravity">center|start</item>
    <item name="android:layout_gravity">center|start</item>
    <item name="android:textSize">@dimen/_18sdp</item>
    <item name="android:fontFamily">@font/kreon_bold</item>
    <item name="listPreferredItemHeightSmall">48dp</item>
  </style>

  <style name="editText" parent="Widget.AppCompat.EditText">
    <item name="android:textColor">@color/colorBlack</item>
    <item name="android:textColorHint">@color/gray</item>
    <item name="android:layout_height">@dimen/_32sdp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:padding">@dimen/_5sdp</item>
    <item name="android:gravity">center|start</item>
    <item name="android:fontFamily">@font/kreon_regular</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textSize">@dimen/_11sdp</item>
    <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    <item name="android:background">@drawable/edt_border_background</item>
  </style>

  <style name="homeButtonStyle" parent="Widget.AppCompat.Button">
    <item name="android:layout_height">@dimen/_36sdp</item>
    <item name="android:layout_width">@dimen/_110sdp</item>
    <item name="android:drawablePadding">@dimen/_minus10sdp</item>
    <item name="android:fontFamily">@font/kreon_bold</item>
    <item name="android:gravity">center</item>
    <item name="android:paddingEnd">@dimen/_5sdp</item>
    <item name="android:paddingRight">@dimen/_5sdp</item>
    <item name="android:paddingLeft">@dimen/_20sdp</item>
    <item name="android:paddingStart">@dimen/_20sdp</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">@color/colorWhite</item>
    <item name="android:textSize">@dimen/_10sdp</item>
  </style>

  <style name="SideMenuTextView" parent="Widget.AppCompat.TextView">
    <item name="android:textColor">@color/colorPrimaryDark</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:padding">@dimen/_5sdp</item>
    <item name="android:drawablePadding">@dimen/_5sdp</item>
    <item name="android:layout_marginStart">@dimen/_8sdp</item>
    <item name="android:layout_marginLeft">@dimen/_8sdp</item>
    <item name="android:layout_marginEnd">@dimen/_8sdp</item>
    <item name="android:layout_marginRight">@dimen/_8sdp</item>
    <item name="android:gravity">center|start</item>
    <item name="android:fontFamily">@font/kreon_bold</item>
    <item name="android:textSize">@dimen/_18sdp</item>
  </style>

</resources>
